{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/standard",
    "prettier/react"
  ],
  "plugins": ["prettier"],
  "rules": {
    "import/no-extraneous-dependencies": [0],
    "import/prefer-default-export": [0],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2
      }
    ],
    "react/prop-types": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    },
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
